{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StudyWin",
  "version": "0.1.0",
  "identifier": "com.victorrodriguez.studywin",
  "build": {
    "frontendDist": "../public",
    "devUrl": "http://127.0.0.1:5002",
    "beforeDevCommand": "source venv/bin/activate && python3 app.py",
    "beforeBuildCommand": "echo No build step needed"
  },
  "app": {
    "windows": [
      {
        "title": "FocusWin",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "hud",
        "title": "StudyWin HUD",
        "width": 350,
        "height": 40,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "url": "hud.html"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "hud-capability"
      ]
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist"
    }
  },
  "plugins": {
    "macos-permissions": {
      "permissions": [
        "Microphone",
        "Camera"
      ]
    }
  }
}