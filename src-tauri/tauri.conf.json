{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Study Tracker",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "dist",
    "devUrl": "http://127.0.0.1:5002",
    "beforeDevCommand": "python3 desktop_app.py",
    "beforeBuildCommand": "echo No build step needed"
  },
  "app": {
    "windows": [
      {
        "title": "FocusWin",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}